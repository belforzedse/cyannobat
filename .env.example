# Payload CMS secret used for session signing and JWT generation
PAYLOAD_SECRET=your-payload-secret

# PostgreSQL connection string used by Payload
DATABASE_URI=postgresql://cyannobat:cyannopass@localhost:5432/cyannobat

# Set to "true" to let Payload push schema changes into Postgres on startup
# Disable in production once you manage migrations manually
PAYLOAD_DB_PUSH=true
# Set to "true" only when you need the container entrypoint to run `payload migrate`
PAYLOAD_RUN_MIGRATIONS=false

# Redis connection URL for caching and booking holds
REDIS_URL=redis://localhost:6379
# Set to "true" when the Redis instance requires TLS (leave false locally)
REDIS_TLS=false

# Public URL of the Next.js application (used in client-side code)
NEXT_PUBLIC_APP_URL=http://localhost:3000
